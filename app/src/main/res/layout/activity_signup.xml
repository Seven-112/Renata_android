<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@drawable/signup_bg">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Me fale um pouco sobre você"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#0E4D31"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/ownerName"
                android:hint="Digite seu nome"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#7A7979"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/emailAddress"
                android:hint="Digite seu email"
                android:layout_below="@+id/ownerName"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#7A7979"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/password"
                android:hint="Nova senha"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@+id/emailAddress"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#7A7979"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/confirmPassword"
                android:hint="Confirmar senha"
                android:inputType="textPassword"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#7A7979"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/age"
                android:hint="Digite sua idade"
                android:inputType="number"
                android:layout_below="@id/confirmPassword"
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#7A7979"
                android:textSize="20dp"/>

            <RadioGroup
                android:id="@+id/radioSex"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@+id/age"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:alpha="1"
                android:background="@drawable/roundborder"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masculino"
                    android:gravity="center"
                    android:textColor="#000"
                    android:buttonTint="#000"
                    android:textSize="20dp"/>

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="Feminino"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:buttonTint="#000"
                    android:textSize="20dp"/>
            </RadioGroup>

            <Button
                android:id="@+id/register"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioSex"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/big_btn"
                android:text="Inscrever-se"
                android:textAllCaps="false"
                android:textSize="20dp" />

            <TextView

                android:id="@+id/toSignipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Já tem uma conta? Vá para Login!"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>