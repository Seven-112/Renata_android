<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#84DABD" />
            <gradient android:angle="-90" android:startColor="#47BBF5" android:endColor="#96D8C8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#84DAC7" />
            <solid android:color="#4595E5"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="1dip" android:color="#84DAC2" />
            <gradient android:angle="-90" android:startColor="#96D8CE" android:endColor="#07B65F" />
        </shape>
    </item>
</selector>